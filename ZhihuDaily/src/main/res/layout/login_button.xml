<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/BLUE_BACKGROUND"
    android:padding="@dimen/login_button_padding"
    >
    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/left_menu_top_index__image_size"
        android:layout_height="@dimen/left_menu_top_index__image_size"
        android:src="@mipmap/comment_avatar"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/please_login"
        android:layout_marginLeft="@dimen/login_button_margin_left"
        android:textSize="@dimen/login_button_text_size"
        android:textColor="@color/WHITE"/>

</LinearLayout>