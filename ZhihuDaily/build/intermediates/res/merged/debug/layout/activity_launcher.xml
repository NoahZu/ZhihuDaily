<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zu.jinhao.zhihuribao.activity.LaunchActivity">

    <ImageView
        android:id="@+id/launcher_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <ImageView
        android:id="@+id/logo_icon"
        android:layout_width="@dimen/launcher_logo_width"
        android:layout_height="@dimen/launcher_logo_height"
        android:background="@mipmap/splash_logo"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/launcher_logo_bottom_height"/>
    <TextView
        android:id="@+id/launcher_image_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/author_text_size"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/author_text_bottom"/>
</RelativeLayout>
